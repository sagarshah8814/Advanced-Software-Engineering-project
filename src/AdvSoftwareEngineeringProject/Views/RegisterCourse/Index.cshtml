@model AdvSoftwareEngineeringProject.ViewModels.RegisterViewModel
<!--View Page For Registering Courses-->
<div class="container">
    <div>
        <div class="col-md-6 col-md-offset-3">
           <h3 class="text-danger"> @ViewBag.Message</h3>
            <form asp-controller="RegisterCourse" asp-action="Index" method="post" role="form">
                <div class="form-group">
                    <select id="department" class="form-control" size="1">
                        <option value="0">Select Department</option>
                        @foreach (var d in Model.Departments)
                        {
                            <option value="@d.DepartmentId">@d.Name</option>
                        }
                    </select><br/>
                </div>
                <div class="form-group">
                    <select asp-for="CourseName" id="courseList" class="form-control" size="1">
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                        <option value="">Select Course</option>
                        @foreach (var c in Model.Courses)
                        {
                            <option class="@c.DepartmentId no-hide">@c.Name</option>
                        }
                    </select><br/>
                    <div class="form-group"><input type="submit" class="btn btn-primary" value="Submit"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

