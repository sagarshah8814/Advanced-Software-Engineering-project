@model RegisterUSerViewModel
<!-- This is a view page for getting username to reset password-->
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-controller="Account" asp-action="PasswordReset" method="post" class="form-horizontal" role="form">
            <h4 class="text-warning">Please Put The User Name To Reset Password</h4>
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
        </form>
    </div>
</div>