@model RegisteredCoursesViewModel
<!--View Page for listing courses to manage by instructor-->
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <table class="table-striped table-hover">
            <thead>
            <tr>
                <th>Courses</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var c in Model.Courses)
            {
                <tr>
                    <form asp-controller="ManageClass" asp-action="Manage" method="post">
                        <td><a asp-controller="ManageClass" asp-action="CourseContent" asp-route-courseId="@c.CourseId">@c.Name</a></td>
                        <td>
                            <input type="hidden" asp-for="CourseName" value="@c.Name"/>
                            <input type="hidden" asp-for="CourseId" value="@c.CourseId"/>
                            <input type="submit" class="btn btn-success" value="Manage"/>
                        </td>
                    </form>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>