@model ManageClassViewModel
<!--View Page for Assigning assignment for instructor-->
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-controller="ManageClass" asp-action="Assign" method="post" class="form-horizontal" role="form">
            
            <div class="form-group">
                <label asp-for="Assignment" class="control-label"></label>
                <textarea asp-for="Assignment" rows="6" cols="50" class="form-control" >
                    Please Enter Here
                </textarea>   
            </div>
            <div class="form-group">
                <label asp-for="DueDateTime" class="control-label"></label>
                <input asp-for="DueDateTime" type="datetime-local" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CourseId" value="@Model.CourseId"/>
                <input type="submit" class="btn btn-primary" value="Post"/>
            </div>
        </form>
    </div>
</div>